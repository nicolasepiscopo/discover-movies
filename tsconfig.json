{
    "compilerOptions": {
        "target": "es5",
        "lib": [
        "dom",
        "dom.iterable",
        "esnext",
        "es2015",
        "es2016",
        "es2017"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "noImplicitAny": false
    },
    "exclude": [
        "node_modules", "jest.config.js"
    ],
    "include": [
        "src"
    ]
}
